<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Certificate AlertDialog Theme for Certificate Picker and PIN prompt -->
    <style name="CertAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- everything -->
        <item name="android:textColor">@color/dialogTitleText</item>
        <item name="android:textColorPrimary">@color/dialogMessageText</item>
        <item name="textAllCaps">false</item>
        <!-- Title -->
        <item name="android:windowTitleSize">20sp</item>
        <!-- buttons -->
        <item name="colorAccent">@color/dialogButtonText</item>
        <!-- PIN EditText -->
        <item name="colorControlNormal">@color/dialogPinEditText</item>
        <item name="colorControlActivated">@color/dialogPinEditText</item>
    </style>

    <!-- Certificate AlertDialog Theme for Errors (Too many PIN attempts) -->
    <style name="ErrorAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- everything -->
        <item name="android:textColor">@color/dialogTitleText</item>
        <item name="android:textColorPrimary">@color/dialogErrorText</item>
        <item name="textAllCaps">false</item>
        <!-- Title -->
        <item name="android:windowTitleSize">20sp</item>
        <!-- buttons -->
        <item name="colorAccent">@color/dialogButtonText</item>
    </style>

    <!-- Certificate AlertDialog Theme for User Choice Dialog -->
    <style name="UserChoiceAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- everything -->
        <item name="android:textColor">@color/dialogTitleText</item>
        <item name="android:textColorPrimary">@color/dialogMessageTextSecondChoice</item>
        <item name="textAllCaps">false</item>
        <!-- Title -->
        <item name="android:windowTitleSize">20sp</item>
        <!-- buttons -->
        <item name="colorAccent">@color/dialogButtonText</item>
    </style>

    <!-- Certificate AlertDialog Theme for Title-Only Dialogs -->
    <style name="TitleOnlyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- everything -->
        <item name="android:textColor">@color/dialogTitleText</item>
        <item name="textAllCaps">false</item>
        <!-- Title -->
        <item name="android:windowTitleSize">20sp</item>
    </style>

</resources>